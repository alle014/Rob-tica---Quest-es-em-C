// Example program
#include <iostream>
#include <string>
using namespace std;

int mudaValor (int*a){
    return *a = *a * 2;
}
int main(){
    int nmr;
    
    cout << "Digite um numero inteiro  qualquer: " << endl;
    cin >> nmr;
    
    int nmrDobrado = mudaValor(&nmr);
    
    cout << "O dobro do numero digitado e: " << nmrDobrado << endl;
}
